@model List<KidKinder1.Entities.Classroom>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Sınıf Tablosu</h5>
                        <span>Sınıflarla İlgili İşlemleri Yapabileceğiniz Alandır</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>

                                    <tr>
                                        <th>#</th>
                                        <th>Sınıf Adı</th>
                                        <th>Açıklama</th>
                                        <th>Yaş Aralığı</th>
                                        <th>Kontenjan</th>
                                        <th>Ders Saatleri</th>
                                        <th>Ücret</th>
                                        <th>Sınıf Görseli</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ClassroomId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.AgeofKids</td>
                                            <td>@item.TotalSeat</td>
                                            <td>@item.ClassTime</td>
                                            <td>@item.Price</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a href="/Classroom/DeleteClassroom/@item.ClassroomId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Classroom/UpdateClassroom/@item.ClassroomId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Classroom/CreateClassroom/" class="btn btn-primary">Yeni Sınıf Girişi</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
