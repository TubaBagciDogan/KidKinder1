@model List<KidKinder1.Entities.Communication>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>İletişim Tablosu</h5>
                        <span>İletişim İle İlgili İşlemleri Yapabileceğiniz Alandır</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>

                                    <tr>
                                        <th>#</th>
                                        <th>Açıklama</th>
                                        <th>Adres</th>
                                        <th>E-Posta</th>
                                        <th>Telefon</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CommunicationId</td>
                                            <td>@item.Description</td>
                                            <td>@item.Address</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td><a href="/Communication/DeleteCommunication/@item.CommunicationId" class="btn btn-danger">Sil</a></td>
                                             <td><a href="/Communication/UpdateCommunication/@item.CommunicationId" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Communication/CreateCommunication/" class="btn btn-primary">Yeni İletişim Kaydet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

