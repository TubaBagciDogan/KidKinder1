@model KidKinder1.Entities.Address
@{
    ViewBag.Title = "UpdateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">

            <!-- Page body start -->
            <div class="page-body">


                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Adres Girişi</h5>
                                <span>Adres ile ilgili verileri Eksiksiz olarak doldurunuz</span>
                            </div>
                            <div class="card-block">

                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Adres Id</label>

                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AddressId, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Açıklama</label>

                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Adres Detayı</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.AddressDetail, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">E-Posta</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Telefon</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Çalışma Saatleri</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.OpeningHours, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button class="btn btn-primary">Adres Bilgilerini Güncelle</button>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>



</div>