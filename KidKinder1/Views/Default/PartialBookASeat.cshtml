@model KidKinder1.Entities.BookASeat
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-5 mb-lg-0">
                <p class="section-title pr-5">
                    <span class="pr-2">Bir Sandalye Ayırın</span>
                </p>
                <h1 class="mb-4">Hemen Kaydolun</h1>
                <p>
                    Çocuğunuz hem eğlensin hem öğrensin ister misiniz? Sizin için oluşturduğumuz atölyelerimizi görmek, deneyimlemek ve gönül rahatlığıyla çocuğunuzu göndermek için acele edin..
                </p>
                <ul class="list-inline m-0">
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Doğal, ferah bir ortam
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Özgürce düşünme ve hareket alanı
                    </li>
                    <li class="py-2">
                        <i class="fa fa-check text-success mr-3"></i>Temiz ve güvenilir bir kurum
                    </li>
                </ul>
                <a href="" class="btn btn-primary mt-4 py-2 px-4">Rezervasyon Yap</a>
            </div>
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Hemen Yer Ayırın</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form method="post" action="/Default/PartialBookASeat">
                            <div class="form-group">
                                <input type="text"
                                       class="form-control border-0 p-4"
                                       name="Name"
                                       placeholder="İsminiz"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email"
                                       class="form-control border-0 p-4"
                                       name="Email"
                                       placeholder="E-mail Adresiniz"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.ClassroomId, (List<SelectListItem>)ViewBag.v, "Sınıf Seçiniz", new { @class = "table table-bordered" })
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit"
                                        name="btnBook"
                                        value="Buton B">

                                    Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
